<UserControl x:Class="NodeModelsEssentials.Controls.CopyableWatch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NodeModelsEssentials.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBox IsReadOnly ="True" HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" Text="{Binding Text}" VerticalAlignment="Top" Width="168" FontSize="11" VerticalContentAlignment="Center" TextChanged="TextBox_TextChanged" FontFamily="Consolas" Background="#FFE2E2E2" Padding="4" MaxWidth="300" />
        <Button Content="Copy" HorizontalAlignment="Left" Margin="168,0,0,0" VerticalAlignment="Top" Width="37" Click="Button_Click" Height="32"/>

    </Grid>
</UserControl>
